{
  "name": "mini-derms-feeder-controller",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "npm run lint:env",
    "typecheck": "tsc --noEmit",
    "test:unit": "AUTH_USERS='[{\"username\":\"admin\",\"password\":\"Adm1n!2345678\",\"role\":\"admin\"},{\"username\":\"operator\",\"password\":\"Op3rator!23456\",\"role\":\"operator\"},{\"username\":\"viewer\",\"password\":\"View3r!23456\",\"role\":\"viewer\"}]' JWT_SECRET='test-suite-secret-rotate-me-please-123' npm run build && AUTH_USERS='[{\"username\":\"admin\",\"password\":\"Adm1n!2345678\",\"role\":\"admin\"},{\"username\":\"operator\",\"password\":\"Op3rator!23456\",\"role\":\"operator\"},{\"username\":\"viewer\",\"password\":\"View3r!23456\",\"role\":\"viewer\"}]' JWT_SECRET='test-suite-secret-rotate-me-please-123' node --test $(find dist/tests -path '*/e2e/*' -prune -o -name '*.test.js' -print)",
    "test:integration": "npm run test:unit",
    "test:e2e": "AUTH_USERS='[{\"username\":\"admin\",\"password\":\"Adm1n!2345678\",\"role\":\"admin\"},{\"username\":\"operator\",\"password\":\"Op3rator!23456\",\"role\":\"operator\"},{\"username\":\"viewer\",\"password\":\"View3r!23456\",\"role\":\"viewer\"}]' JWT_SECRET='test-suite-secret-rotate-me-please-123' npm run build && AUTH_USERS='[{\"username\":\"admin\",\"password\":\"Adm1n!2345678\",\"role\":\"admin\"},{\"username\":\"operator\",\"password\":\"Op3rator!23456\",\"role\":\"operator\"},{\"username\":\"viewer\",\"password\":\"View3r!23456\",\"role\":\"viewer\"}]' JWT_SECRET='test-suite-secret-rotate-me-please-123' bash scripts/runE2eTests.sh",
    "test": "npm run test:unit",
    "test:all": "npm test && npm run test:e2e",
    "ci": "npm run lint && npm run typecheck && npm test && npm run test:e2e",
    "lint:env": "node scripts/lintEnvExample.js",
    "demo:scenario": "bash scripts/run_demo_scenario.sh",
    "ci:local": "bash scripts/ci_local.sh",
    "dev:stack": "docker compose up --build",
    "stop:stack": "docker compose down"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mqtt": "^5.5.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
